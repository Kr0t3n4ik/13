with open('file.txt') as file:
    for line in file.readlines():
        words = line.split()
        tmp_words = []
        for word in words:
            if not (3 <= len(word) >= 5):
                tmp_words.append(word)
        if tmp_words and not len(tmp_words) % 2 == 0:
            tmp_words.pop()

        with open('new_file.txt', 'a') as file2:
            for word in words:
                if word not in tmp_words:
                    file2.write(word)
                    
                    
